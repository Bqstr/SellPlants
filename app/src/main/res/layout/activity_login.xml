<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
        android:id="@+id/linearLogin"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <FrameLayout android:gravity="start"
            android:id="@+id/frameImage"
            android:layout_height="@dimen/_274pxv" android:layout_width="match_parent">



                    <LinearLayout android:id="@+id/linearRowvectorOne"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:layout_marginEnd="@dimen/_1pxh"
                        android:layout_marginStart="@dimen/_266pxh"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_weight="0.71"
                        android:layout_width="0dp" android:orientation="horizontal">

            </LinearLayout>
            <ImageView
                android:layout_gravity="start"
                android:layout_height="@dimen/_274pxh"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                />

            <TextView
                android:textSize="40dp"
                android:layout_marginTop="60dp"
                android:layout_gravity="center"
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login" />
        </FrameLayout>


        <EditText
            android:background="@drawable/rectangle_border_gray_600_radius_6"
            android:drawablePadding="@dimen/_15pxh"
            android:drawableStart="@drawable/img_message"
            android:ellipsize="end" android:hint="@string/lbl_email"
            android:id="@+id/email_logIn"
            android:inputType="textEmailAddress"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_31pxh"
            android:layout_marginStart="@dimen/_32pxh"
            android:layout_marginTop="@dimen/_42pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_13pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_20pxh"
            android:paddingTop="@dimen/_13pxv" android:singleLine="true"
            android:textColorHint="@color/gray_600"
            style="@style/etRoundedOutline" tools:ignore="Autofill"/>
        <EditText
            android:background="@drawable/rectangle_border_gray_600_radius_6"
            android:drawablePadding="@dimen/_17pxh"
            android:drawableStart="@drawable/img_lock"
            android:ellipsize="end" android:hint="@string/lbl_password"
            android:id="@+id/password_logIn"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_31pxh"
            android:layout_marginStart="@dimen/_32pxh"
            android:layout_marginTop="@dimen/_28pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_13pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_18pxh"
            android:paddingTop="@dimen/_13pxv" android:singleLine="true"
            android:textColorHint="@color/gray_600"
            style="@style/etRoundedOutline" tools:ignore="Autofill"/>
        <TextView android:ellipsize="end"
            android:id="@+id/txtForgotpassword"
            android:layout_gravity="end"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_31pxh"
            android:layout_marginStart="@dimen/_31pxh"
            android:layout_marginTop="@dimen/_8pxv"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@string/msg_forgot_password"
            style="@style/txtSFProTextregular14" tools:text="@string/msg_forgot_password"/>

    <androidx.appcompat.widget.AppCompatButton
            android:ellipsize="end" android:gravity="center"
            android:id="@+id/logIn_app"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_49pxv"
            android:layout_marginEnd="@dimen/_32pxh"
            android:layout_marginStart="@dimen/_32pxh"
            android:layout_marginTop="@dimen/_33pxv"
            android:layout_width="@dimen/_245pxh"
            android:paddingBottom="@dimen/_11pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_11pxv" android:singleLine="true"
            android:text="@string/lbl_login" android:textAllCaps="false"
            style="@style/btnSolidRounded_1" tools:text="@string/lbl_login"/>

    <TextView
        android:id="@+id/register_as_user"
        style="@style/txtSFProTextregular14"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginStart="@dimen/_32pxh"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="@dimen/_32pxh"
        android:ellipsize="end"
        android:gravity="center_horizontal"

        android:text="not  an account? register as User"
        tools:text="not have an account? register as User" />

    <TextView
        android:id="@+id/register_as_shop"
        style="@style/txtSFProTextregular14"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginStart="@dimen/_32pxh"

        android:layout_marginEnd="@dimen/_32pxh"

        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="not  an account? register as Shop"
        tools:text="not have an account? register as Shop" />


</LinearLayout>

